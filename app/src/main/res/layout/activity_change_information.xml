<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/CIN_ScrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".controller.ChangeInformationJ"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray">

    <androidx.cardview.widget.CardView
        android:id="@+id/svMainCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:id="@+id/mcvrelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TableLayout
                android:id="@+id/rlTableLayout"
                android:layout_width="match_parent"
                android:layout_height="600dp" >

                <TableRow
                    android:id="@+id/tlTopRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/border_top_green" >

                    <TextView
                        android:id="@+id/trTopText"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:padding="10dp"
                        android:background="@drawable/border_top_green"

                        android:fontFamily="sans-serif-light"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:text="@string/CINtrTopText" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tlDividerRow1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dr1Card"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tlTitleCurrentRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/trTitleCurrentText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/white_subtle_border"

                            android:textSize="24sp"
                            android:text="@string/CINtrTitleCurrentText" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tlContentCurrentRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/trContentCurrentText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/white_subtle_border"

                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:text="@string/CINtrContentCurrentText" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tlDividerRow2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/dr2Card"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/tlTitleNewRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/trTitleNewText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:background="@drawable/white_subtle_border"

                            android:textSize="24sp"
                            android:text="@string/CINtrTitleNewText" />

                    </TableRow>

                    <TableRow
                        android:id="@+id/trContentNewRow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/trContentNewEdit"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="201dp"
                            android:layout_weight="1"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:background="@drawable/white_subtle_border"

                            android:inputType="text"
                            android:textSize="24sp"
                            android:hint="-" />

                    </TableRow>

                 </TableLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/rlBottomCardView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="600dp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/bcvConstraintLayout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/CINbcvSaveButton"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="10dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:circularflow_radiusInDP="30dp"
                            android:background="@color/lightgreen"

                            android:textSize="20sp"
                            android:text="@string/CINbcvSaveButton" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>