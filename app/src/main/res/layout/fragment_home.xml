<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/HOM_ScrollView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".controller.HomeFragmentJ"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/green_background_spring" >

    <LinearLayout
        android:id="@+id/svLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <androidx.cardview.widget.CardView
            android:id="@+id/llTopCardView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/foreground"
            app:cardCornerRadius="30dp"
            android:layout_margin="10dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/tcvConstraintLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/tcvLogoImageView"
                    android:layout_width="151dp"
                    android:layout_height="149dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_percent="0.5"
                    app:layout_constraintHorizontal_bias="0.933"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.509"
                    android:src="@drawable/logo"
                    android:contentDescription="@string/HOMtcvLogoImageView" />

                <TextView
                    android:id="@+id/tcvInformationTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.11"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.861"

                    android:text="@string/HOMtcvInformationTextView" />

                <TextView
                    android:id="@+id/tcvGreetingTextView"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.077"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"

                    android:text="@string/HOMtcvGreeetingTextView"
                    android:textAlignment="center"
                    android:textSize="28sp" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TableLayout
            android:id="@+id/llDoctorInfoTableLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:id="@+id/ditlTitleTableRow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="10dp"
                android:background="@drawable/bottom_border_on_white">

                <TextView
                    android:id="@+id/ttrTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"

                    android:textSize="28sp"
                    android:text="@string/HOMttrTitleTextView" />

                <Space
                    android:id="@+id/ttrSpace"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <ImageView
                    android:id="@+id/HOMDoctorInfoButtonImage"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/expand"
                    android:contentDescription="@string/HOMDoctorInfoButtonImage"/>

                </TableRow>

                <TableRow
                    android:id="@+id/doctor_info_row1a"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:visibility="gone"
                    android:background="@color/lightgray" >

                    <TextView
                        android:id="@+id/textView_doctor_nameT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="20sp"
                        android:text="@string/HOMtextView_doctor_nameT" />

                </TableRow>

                <TableRow
                    android:id="@+id/doctor_info_row1b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:visibility="gone"
                    android:background="@drawable/white_subtle_border" >

                    <TextView
                        android:id="@+id/textView_doctor_nameC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textSize="24sp"
                        android:text="@string/HOMtextView_doctor_nameC"/>

                </TableRow>

                <TableRow
                    android:id="@+id/doctor_info_row2a"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:visibility="gone"
                    android:background="@color/lightgray" >

                    <TextView
                        android:id="@+id/textView_doctor_telT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:textSize="20sp"
                        android:text="@string/HOMtextView_doctor_telT" />

                </TableRow>

                <TableRow
                    android:id="@+id/doctor_info_row2b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:visibility="gone"
                    android:background="@drawable/white_subtle_border">

                    <TextView
                        android:id="@+id/textView_doctor_telC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:textSize="24sp"
                        android:text="@string/HOMtextView_doctor_telC" />

                </TableRow>

                <TableRow
                    android:id="@+id/doctor_info_row3a"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:visibility="gone"
                    android:background="@color/lightgray">

                    <TextView
                        android:id="@+id/textView_doctor_emailT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:textSize="20sp"
                        android:text="@string/HOMtextView_doctor_emailT" />

                </TableRow>

                <TableRow
                    android:id="@+id/doctor_info_row3b"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="10dp"
                    android:visibility="gone"
                    android:background="@drawable/white_subtle_border" >

                    <TextView
                        android:id="@+id/textView_doctor_emailC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"

                        android:textSize="24sp"
                        android:text="@string/HOMtextView_doctor_emailC"/>

                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/llRecomTableLayout"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/lightgreen">

                <TableRow
                    android:id="@+id/rtlRecomTitleRow"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bottom_border_on_white">

                    <TextView
                        android:id="@+id/rtrTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/HOMrtrTitleText"
                        android:textSize="28sp" />

                </TableRow>

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/rtlNestedScrollView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="20dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" >

                    <LinearLayout
                        android:id="@+id/nsvLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/lightgreen"
                        android:orientation="vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/llRecom1CardView"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/lightgreen"
                            app:cardCornerRadius="30dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/r1cvConstraintLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/white_subtle_border">

                                <TextView
                                    android:id="@+id/r1cvTitleTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.122"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.333"

                                    android:text="@string/HOMr1cvTitleTextView"
                                    android:textSize="24sp" />

                                <TextView
                                    android:id="@+id/r1cvDateTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="24dp"
                                    android:gravity="center_vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.971"
                                    app:layout_constraintStart_toStartOf="@+id/r1cvTitleTextView"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.452"

                                    android:text="@string/HOMr1cvDateTextView"
                                    android:textSize="20sp" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/llRecom2CardView"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/lightgreen"
                            app:cardCornerRadius="30dp" >

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/r2cvConstraintLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/white_subtle_border">

                                <TextView
                                    android:id="@+id/r2cvTitleTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.122"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.333"

                                    android:textSize="24sp"
                                    android:text="@string/HOMr2cvTitleTextView"/>

                                <TextView
                                    android:id="@+id/r2cvDateTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="24dp"
                                    android:gravity="center_vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.971"
                                    app:layout_constraintStart_toStartOf="@+id/r2cvTitleTextView"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.452"

                                    android:textSize="20sp"
                                    android:text="@string/HOMr2cvDateTextView" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/llRecom3CardView"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/lightgreen"
                            app:cardCornerRadius="30dp">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/r3cvConstraintLayout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/white_subtle_border">

                                <TextView
                                    android:id="@+id/r3cvTitleTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.122"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.333"

                                    android:textSize="24sp"
                                    android:text="@string/HOMr3cvTitleTextView"/>

                                <TextView
                                    android:id="@+id/r3cvDateTextView"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="24dp"
                                    android:gravity="center_vertical"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintHorizontal_bias="0.971"
                                    app:layout_constraintStart_toStartOf="@+id/r3cvTitleTextView"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintVertical_bias="0.452"

                                    android:textSize="20sp"
                                    android:text="@string/HOMr3cvDateTextView" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </TableLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/llFisaMedicalaCardView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="30dp"
                android:layout_margin="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/fmcvConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_subtle_border">

                    <TextView
                        android:id="@+id/fmcvTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.08"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.469"
                        android:background="@drawable/bottom_border_on_white"

                        android:textSize="24sp"
                        android:text="@string/HOMfmcvTitleText" />

                    <ImageView
                        android:id="@+id/fmcvImageView"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.766"
                        app:layout_constraintStart_toEndOf="@+id/fmcvTitleText"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.509"
                        android:src="@drawable/icon_fisa_medicala"
                        android:contentDescription="@string/HOMfmcvImageViewDescription"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/llAlarmeCardView"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="30dp"
                android:layout_margin="10dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/acvConstraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/white_subtle_border">

                    <TextView
                        android:id="@+id/acvTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.08"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.469"
                        android:background="@drawable/bottom_border_on_white"

                        android:textSize="24sp"
                        android:text="@string/HOMacvTitleText"/>

                    <ImageView
                        android:id="@+id/acvImageView"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.852"
                        app:layout_constraintStart_toEndOf="@+id/acvTitleText"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.363"
                        android:src="@drawable/icon_alarm"
                        android:contentDescription="@string/HOMacvImageViewDescription"/>

                    <ImageView
                        android:id="@+id/acvActiveImageView"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.852"
                        app:layout_constraintStart_toEndOf="@+id/acvTitleText"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.363"
                        android:src="@drawable/icon_alarm_active"
                        android:contentDescription="@string/HOMacvImageViewDescription2" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/llBottomCardView"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                app:cardCornerRadius="0dp" >

            </androidx.cardview.widget.CardView>

        </LinearLayout>

</ScrollView>

